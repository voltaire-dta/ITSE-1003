#include <stdio.h>

int main() {
	// check whether a given number is even or odd
	int number;
	int rem1;
	printf("Please enter a whole, positive number. I will tell you if it is even or odd\n");
	scanf("%d", &number);
	rem1 = number%2;
	printf("You entered: %d\n", number);
	if(rem1 == 0) {
		printf("That number is even!");
	}
	else {
		printf("That number is odd!");
	}

	return 0;
}
